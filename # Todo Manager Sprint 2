import java.util.Scanner;

public class TodoManagerSprint2 {
    private static final int MAX_TASKS = 10;
    private static String[] tasks = new String[MAX_TASKS];
    private static int taskCount = 0;

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        while (true) {
            System.out.println("1. Add task");
            System.out.println("2. Update task");
            System.out.println("3. Delete task");
            System.out.println("4. Search task");
            System.out.println("0. Exit");
            System.out.print("Enter your choice: ");
            int choice = scanner.nextInt();
            scanner.nextLine();

            if (choice == 0) {
                break;
            }

            switch (choice) {
                case 1:
                    addTask(scanner);
                    break;
                case 2:
                    updateTask(scanner);
                    break;
                case 3:
                    deleteTask(scanner);
                    break;
                case 4:
                    searchTask(scanner);
                    break;
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        }
        scanner.close();
    }

    private static void addTask(Scanner scanner) {
        if (taskCount < MAX_TASKS) {
            System.out.print("Enter task: ");
            tasks[taskCount++] = scanner.nextLine();
            System.out.println("Task added successfully.");
        } else {
            System.out.println("Task list is full.");
        }
    }

    private static void updateTask(Scanner scanner) {
        System.out.print("Enter task to update: ");
        String taskToUpdate = scanner.nextLine();
        boolean found = false;
        for (int i = 0; i < taskCount; i++) {
            if (tasks[i].equals(taskToUpdate)) {
                System.out.print("Enter new task: ");
                tasks[i] = scanner.nextLine();
                System.out.println("Task updated successfully.");
                found = true;
                break;
            }
        }
        if (!found) {
            System.out.println("Task not found.");
        }
    }

    private static void deleteTask(Scanner scanner) {
        System.out.print("Enter task to delete: ");
        String taskToDelete = scanner.nextLine();
        boolean found = false;
        for (int i = 0; i < taskCount; i++) {
            if (tasks[i].equals(taskToDelete)) {
                for (int j = i; j < taskCount - 1; j++) {
                    tasks[j] = tasks[j + 1];
                }
                tasks[--taskCount] = null;
                System.out.println("Task deleted successfully.");
                found = true;
                break;
            }
        }
        if (!found) {
            System.out.println("Task not found.");
        }
    }

    private static void searchTask(Scanner scanner) {
        System.out.print("Enter task to search: ");
        String taskToSearch = scanner.nextLine();
        boolean found = false;
        for (int i = 0; i < taskCount; i++) {
            if (tasks[i].equals(taskToSearch)) {
                System.out.println("Task found: " + tasks[i]);
                found = true;
                break;
            }
        }
        if (!found) {
            System.out.println("Task not found.");
        }
    }
}
